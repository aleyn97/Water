<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bus_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:text="中心营业厅" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bus_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="营业时间："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/summer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bus_time_title"
            android:text="9:00-18:00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/winter_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summer_time"
            android:layout_toRightOf="@id/bus_time_title"
            android:text="周末未知"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/winter_time"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="地址："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/winter_time"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/address_title"
            android:text="郑东商业中心"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_title"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="电话："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_text"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/phone_title"
            android:text="0371-8496011"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.15dp"
        android:layout_marginTop="2dp"
        android:background="@color/HuiHei" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="2.5dp"
        android:collapseColumns="">

        <TextView
            android:id="@+id/goto_hear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/map_to_car"
            android:drawableRight="@drawable/svg_fenge"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:text="到这去"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/call_phone"
            android:drawableRight="@drawable/svg_fenge"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:text="打电话"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/see_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/bus_map_blue"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:text="看地图"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>