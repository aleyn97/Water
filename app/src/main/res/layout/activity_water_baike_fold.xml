<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HuiBai"
    tools:context="sh.com.water.ui.activity.BusGuildFoldActivity">

    <ImageView
        android:id="@+id/res_error"
        android:src="@color/Black_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/rel_count"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/baike_fold_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/app_logo" />

        <TextView
            android:id="@+id/baike_fold_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/baike_fold_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/AnHuang" />

        <RelativeLayout
            android:id="@+id/reltv_bottom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/baike_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/faburen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/baike_name"
                android:text="发布人：" />


            <TextView
                android:id="@+id/baike_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/faburen"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/faburen"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/baike_time_text"
                android:text="时间：" />

        </RelativeLayout>


        <TextView
            android:id="@+id/count_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/reltv_bottom2"
            android:layout_below="@id/baike_fold_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical" />
    </RelativeLayout>
</RelativeLayout>
